<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/first_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <FrameLayout
            android:id="@+id/camera_preview_first_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/camera_preview_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/first_camera_capture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="30dp"
                android:background="@drawable/button_circle_background"
                android:padding="2dp"
                android:src="@drawable/ic_action_video" />

            <ImageButton
                android:id="@+id/camera_preview_first_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_margin="30dp"
                android:background="@drawable/button_circle_background"
                android:padding="2dp"
                android:src="@drawable/ic_action_switch_video" />
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>

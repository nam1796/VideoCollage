<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/save_dialog_width"
    android:layout_height="@dimen/save_dialog_height"
    android:background="@drawable/rounded_corners_background"
    android:orientation="vertical"
    android:padding="24dp">
    ​

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Share project as"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:typeface="sans" />
    ​

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center">
        ​

        <Button
            android:id="@+id/btn_gif"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/save_dialog_btn"
            android:text="Gif"
            android:textColor="@color/colorText" />

        <Space
            android:layout_width="14dp"
            android:layout_height="wrap_content" />
        ​

        <Button
            android:id="@+id/btn_video"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/save_dialog_btn"
            android:text="Video"
            android:textColor="@color/colorText" />
    </LinearLayout>
    ​

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/cancel_btn"
        android:padding="12dp"
        android:text="CANCEL"
        android:textColor="@color/thumb_color"
        android:textSize="15sp" />
    ​
</RelativeLayout>